<h1>
  Cocktails
</h1>
<p>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-sm btn-default" %>
</p>
<ul>
  <% @cocktails.each do |cocktail| %>
    <li class="list-unstyled">
      <p>
        <% picture = cocktail.pictures.first %>
        <%= cl_image_tag picture.path, width: 30, height: 20, crop: :fill if picture %>
        <%= link_to cocktail.name, cocktail_path(cocktail) %><br>

      </p>
    </li>
  <% end %>
</ul>
